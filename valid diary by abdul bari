# This program lets you write diary entries and search them

import datetime

# We'll store diary entries in a list
diary_entries = []

def show_welcome():
    """Show welcome message"""
    print("*" * 40)
    print("    WELCOME TO YOUR DIGITAL DIARY!")
    print("*" * 40)
    print("üìñ Write your daily thoughts!")
    print("üîç Search your old entries!")
    print("üìù Keep track of your memories!")

def show_menu():
    """Show menu options"""
    print("\n" + "=" * 30)
    print("WHAT DO YOU WANT TO DO?")
    print("=" * 30)
    print("1. Write a new diary entry")
    print("2. Read all my entries")
    print("3. Search for a word")
    print("4. Count my entries")
    print("5. Exit")

def write_entry():
    """Write a new diary entry"""
    print("\nüìù WRITING NEW ENTRY")
    print("-" * 25)
    
    # Get today's date
    today = datetime.date.today()
    date_string = str(today)
    
    print(f"üìÖ Today's date: {date_string}")
    
    # Get entry from user
    print("What do you want to write about today?")
    user_entry = input("Type here: ")
    
    # Check if they wrote something
    if user_entry == "":
        print("‚ùå You didn't write anything!")
        return
    
    # Add entry to our list
    new_entry = {
        "date": date_string,
        "text": user_entry
    }
    diary_entries.append(new_entry)
    
    print("‚úÖ Entry saved!")
    print(f"You wrote {len(user_entry.split())} words today!")

def read_all_entries():
    """Read all diary entries using FOR LOOP"""
    print("\nüìö ALL YOUR DIARY ENTRIES")
    print("-" * 30)
    
    # Check if diary is empty
    if len(diary_entries) == 0:
        print("üìù No entries yet! Write your first entry!")
        return
    
    # Use FOR LOOP to show each entry
    entry_number = 1
    for entry in diary_entries:
        print(f"\nüìñ Entry #{entry_number}")
        print(f"üìÖ Date: {entry['date']}")
        print(f"üìù What you wrote: {entry['text']}")
        print("-" * 20)
        entry_number = entry_number + 1
    
    print(f"\nüìä Total entries: {len(diary_entries)}")

def search_entries():
    """Search for entries with a word using FOR LOOP"""
    print("\nüîç SEARCH YOUR ENTRIES")
    print("-" * 25)
    
    # Check if diary is empty
    if len(diary_entries) == 0:
        print("üìù No entries to search! Write some entries first!")
        return
    
    # Get search word
    search_word = input("What word do you want to find? ")
    
    if search_word == "":
        print("‚ùå You need to type a word to search!")
        return
    
    # Make search case-insensitive
    search_word = search_word.lower()
    
    # Use FOR LOOP to search through entries
    found_entries = []
    for entry in diary_entries:
        entry_text = entry['text'].lower()
        if search_word in entry_text:
            found_entries.append(entry)
    
    # Show results
    if len(found_entries) == 0:
        print(f"‚ùå No entries found with the word '{search_word}'")
    else:
        print(f"‚úÖ Found {len(found_entries)} entries with '{search_word}':")
        
        # Use another FOR LOOP to show found entries
        count = 1
        for entry in found_entries:
            print(f"\nüéØ Match #{count}")
            print(f"üìÖ Date: {entry['date']}")
            print(f"üìù Entry: {entry['text']}")
            count = count + 1

def count_entries():
    """Count entries and show statistics using FOR LOOP"""
    print("\nüìä DIARY STATISTICS")
    print("-" * 20)
    
    if len(diary_entries) == 0:
        print("üìù No entries yet!")
        return
    
    # Count total entries
    total_entries = len(diary_entries)
    print(f"üìö Total entries: {total_entries}")
    
    # Count total words using FOR LOOP
    total_words = 0
    for entry in diary_entries:
        words_in_entry = len(entry['text'].split())
        total_words = total_words + words_in_entry
    
    print(f"üìù Total words written: {total_words}")
    
    # Calculate average words per entry
    if total_entries > 0:
        average_words = total_words / total_entries
        print(f"üìà Average words per entry: {average_words:.1f}")
    
    # Show all dates using FOR LOOP
    print("\nüìÖ All your writing dates:")
    date_number = 1
    for entry in diary_entries:
        print(f"   {date_number}. {entry['date']}")
        date_number = date_number + 1

def save_to_file():
    """Save all entries to a text file using FOR LOOP"""
    try:
        file = open("my_diary_backup.txt", "w")
        
        file.write("MY DIGITAL DIARY BACKUP\n")
        file.write("=" * 30 + "\n\n")
        
        # Use FOR LOOP to write each entry
        for entry in diary_entries:
            file.write(f"Date: {entry['date']}\n")
            file.write(f"Entry: {entry['text']}\n")
            file.write("-" * 25 + "\n\n")
        
        file.close()
        print("üíæ Diary saved to 'my_diary_backup.txt'!")
    except:
        print("‚ùå Could not save to file!")

def main():
    """Main program using WHILE LOOP"""
    show_welcome()
    
    # Main program loop - WHILE LOOP
    running = True
    while running:
        show_menu()
        
        # Get user choice
        choice = input("\nEnter your choice (1-5): ")
        
        # Process choice
        if choice == "1":
            write_entry()
            
        elif choice == "2":
            read_all_entries()
            
        elif choice == "3":
            search_entries()
            
        elif choice == "4":
            count_entries()
            
        elif choice == "5":
            print("\nüåü GOODBYE!")
            print("Thanks for using your digital diary!")
            
            # Ask if they want to save
            save_choice = input("Do you want to save your diary to a file? (y/n): ")
            if save_choice.lower() == "y" or save_choice.lower() == "yes":
                save_to_file()
            
            print("See you next time! üëã")
            running = False  # This ends the while loop
            
        else:
            print("‚ùå Invalid choice! Please pick 1, 2, 3, 4, or 5.")
        
        # Pause before showing menu again (only if still running)
        if running:
            input("\nPress Enter to continue...")

# Start the program
print("Starting Digital Diary...")
main()
print("Program ended.")